<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<HBox id="cardPane" fx:id="cardPane" minHeight="200.0" prefWidth="250.0" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.75), 15, 0.5, 0, 5);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane style="-fx-background-color: #1d1d1d; -fx-padding: 10; -fx-background-radius: 10" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="150" />
        </columnConstraints>

        <!-- StackPane to overlay the region label at the top right -->
        <StackPane GridPane.columnIndex="0">
            <!-- Main content VBox -->
            <VBox alignment="CENTER_LEFT" minHeight="105" prefWidth="342.0" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.75), 15, 0.5, 0, 5);">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label fx:id="id" style="-fx-font-weight: bold; -fx-font-size: 35px;" styleClass="cell_big_label" textFill="#FFD700" />
                    <Label fx:id="name" style="-fx-font-weight: bold; -fx-font-size: 35px;" styleClass="cell_big_label" textFill="#FFD700" />
                    <HBox spacing="40" />
                    <Label fx:id="price" styleClass="price_label" />
                    <HBox spacing="40" />
                    <Label fx:id="area" styleClass="area_label" />
                </HBox>
                <Line fx:id="underline" stroke="#FFD700" strokeWidth="2" />
                <HBox spacing="5">
                    <Label style="-fx-font-weight: bold;" styleClass="cell_small_label" text="Address:" textFill="#FFD700" />
                    <Label fx:id="address" styleClass="cell_small_label" textFill="#C2C4C6" />
                </HBox>
                <HBox spacing="5">
                    <Label style="-fx-font-weight: bold;" styleClass="cell_small_label" text="Seller:" textFill="#FFD700" />
                    <Label fx:id="seller" styleClass="cell_small_label" textFill="#C2C4C6" />
                </HBox>
                <HBox spacing="5" >
                    <Label style="-fx-font-weight: bold;" styleClass="cell_small_label" text="Buyers:" textFill="#FFD700"/>
                    <GridPane fx:id="buyers" hgap="5" styleClass="cell_small_label" />
                </HBox>
            </VBox>

            <!-- Region label aligned to the top right of the StackPane -->
            <Label fx:id="region" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.75), 15, 0.5, 0, 5);" styleClass="region_label" textFill="#FFD700" StackPane.alignment="TOP_RIGHT" />
        </StackPane>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
